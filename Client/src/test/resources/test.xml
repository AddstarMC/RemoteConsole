<rcon>
    <servers>
        <server reconnect="true">localhost</server>
        <server reconnect="true">localhost:22051</server>
    </servers>

    <views>
        <default>chat</default>
        <view name="chat">
            <filters>
                <directed/>
                <chat/>
                <exception/>
                <system/>
            </filters>
            <servers>
                <excludes>
                    <server>Proxy</server>
                </excludes>
                <includes>
                    <server>survival</server>
                </includes>
            </servers>
            <layout format="String"/>
        </view>
        <view name="log">
        </view>
    </views>
</rcon>